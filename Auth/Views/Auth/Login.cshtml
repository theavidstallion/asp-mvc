@model Auth.Models.ApplicationUser
@inject SignInManager<Auth.Models.ApplicationUser> SignInManagerService

@{
    ViewData["Title"] = "Login";
    var schemes = await SignInManagerService.GetExternalAuthenticationSchemesAsync();
    var googleScheme = schemes.FirstOrDefault(s => s.Name == "Google");
}

<h1 style="text-align: center;">Login</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-controller="Auth" asp-action="Login" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label> 
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <a asp-controller="Auth" asp-action="ForgetPassword">Forgot your password?</a>

            <br />
            <button type="submit" class="btn btn-success mt-3">Log In</button>
            <br />
        </form>

        <hr />

        <div style="display: flex; gap: 15px; align-items: center;">
        @foreach (var scheme in schemes)
        {
            <form asp-action="ExternalLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal mb-3">
                <button type="submit" class="" name="provider" value="@scheme.Name" style="border: none; background-color: transparent;" title="Log in using your @scheme.DisplayName account">

                    @if (scheme.Name == googleScheme?.Name)
                    {
                        <img src="/images/google.png" alt="Google Login" style="width: 40px; height: 40px;" />
                    }
                    else if (scheme.Name == "Facebook")
                    {
                        <img src="/images/facebook.png" alt="Facebook Login" style="width: 40px; height: 40px;" />
                    }
                    else
                    {
                        <p>Sign in with @scheme.DisplayName</p>
                    }
                </button>
            </form>
        }
        </div>

        
    </div>
</div>


