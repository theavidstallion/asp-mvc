@model Auth.Models.ApplicationUser
@inject SignInManager<Auth.Models.ApplicationUser> SignInManagerService

@{
    ViewData["Title"] = "Register";
    var schemes = await SignInManagerService.GetExternalAuthenticationSchemesAsync();
    var googleScheme = schemes.FirstOrDefault(s => s.Name == "Google");
}

<h1 style="text-align: center;">Create Account</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-controller="Auth" asp-action="Register" method="post" class="mb-3">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Register</button><br />
        </form>

        <hr />
        <div style="display: flex; gap: 15px; align-items: center;">
            @foreach (var scheme in schemes)
            {
                <form asp-action="ExternalLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal mb-3">
                    <button type="submit" class="" name="provider" value="@scheme.Name" style="border: none; background-color: transparent;" title="Log in using your @scheme.DisplayName account">

                        @if (scheme.Name == googleScheme?.Name)
                        {
                            <img src="/images/google.png" alt="Google Login" style="width: 40px; height: 40px;" />
                        }
                        else if (scheme.Name == "Facebook")
                        {
                            <img src="/images/facebook.png" alt="Facebook Login" style="width: 40px; height: 40px;" />
                        }
                        else
                        {
                            <p>Sign in with @scheme.DisplayName</p>
                        }
                    </button>
                </form>
            }
        </div>

    </div>



    

</div>